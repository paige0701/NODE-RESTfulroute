<% include partials/header %>

<div class='ui main text container segment'>
    <div class="ui huge header">New Posting</div>
    
    <FORM action='/blogs' method='post' class='ui form' >
        <div class='field'>
            <label>Title</label>
            <input type='text' placeholder='title' name='blog[title]'></input>
        </div>
        
        <div class='field'>
            <label>Image</label>
            <input type='text' placeholder='image' name='blog[image]'></input>
        </div>
        <div class='field'>
            <label>Blog Content</label>
            <textarea name='blog[body]'></textarea>
            
        </div>
            
        <input class='ui violet basic button' type='submit'></input>
    </FORM>
</div>

<% include partials/footer %>