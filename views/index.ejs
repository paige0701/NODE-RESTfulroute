<% include ./partials/header %>

<div class='ui main text container'>
    <div class='ui huge header'>Recent Postings</div>
    <div class='ui top attached segment'>
        <div class="ui divided items">
            <% blogs.forEach(function(data){ %>
            <div class="item">
                <div class="image">
                    <img class='ui centered image' src='<%= data.image %>'></img>
                </div>
                <div class="content">
                    <a class='header' href='/blogs/<%= data._id %>'><%= data.title %></a>
                    <div class="meta">
                        <span><%= data.created.toDateString() %></span>
                    </div>
                    <div class="description">
                        <p><%- data.body.substring(0,100) %> ...</p>
                    </div>
                    <div class="extra">
                        
                         <a class='ui floated basic violet button' href='/blogs/<%= data.id %>'>Read more 
                             <i class='right chevron icon'></i>
                         </a>
                    </div>
                </div>
            </div>
            <% })  %>
        </div>
    </div>
</div>
<% include ./partials/footer %>