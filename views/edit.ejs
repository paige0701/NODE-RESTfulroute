<% include ./partials/header %>

<div class='ui main text container'>
<h1>Edit <%= blog.title %></h1>
    <form action="/blogs/<%= blog._id %>?_method=PUT" method='POST' class='ui form' >
        <div class='field'>
            <label>Title</label>
            <input type='text' value='<%= blog.title %>' name='blog[title]'></input>
        </div>
        
        <div class='field'>
            <label>Image</label>
            <input type='text' value='<%= blog.image %>' name='blog[image]'></input>
        </div>
        <div class='field'>
            <label>Blog Content</label>
            <textarea name='blog[body]'><%= blog.body %></textarea>
            
        </div>
            
        <input class='ui violet basic button' type='submit'></input>
    </form>
</div>
<% include ./partials/footer %>